<% include ../partials/header %>
<div class= "container" >
    <h1 class= "text-center" style= "margin-bottom:20px">Add a new Tour place to this List!</h1>
    <form action = "/places" method = "POST">
        <div class= "form-group">
            <input class= "form-control " type = "text" name = "place[name]" placeholder = "Name of place" style = "width:30%; margin: 0 auto;">
        </div>
        <div class= "form-group">
            <input class= "form-control " type = "number" name = "place[price]" placeholder = "Price" step="0.01" style = "width:30%; margin: 0 auto;">
        </div>
        <div class= "form-group">
            <input class= "form-control" type = "text" name = "place[image]" placeholder = "Image URL" style = "width:30%; margin: 0 auto;">
        </div>
        <div class = "form-group">
            <input class = "form-control" type = "text" name = "place[desc]" placeholder = "Description" style = "width:30%; margin:0 auto;">
        </div>
        <div class= "form-group">
            <button class="btn btn-primary btn-block" style= "margin:0 auto; width: 30%">Submit</button>
        </div>
        <a href= "/places" style= "margin:0 auto">Go Back</a>
    </form>
</div>
<% include ../partials/footer %>
