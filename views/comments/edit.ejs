<% include ../partials/header %>

<div class= "container" >
    <h1 class= "text-center" style= "margin-bottom:20px">Edit Comment</h1>
    <form action = "/places/<%= place_id %>/comments/<%= comment._id %>/?_method=PUT" method = "POST">
        <div class= "form-group">
            <input class= "form-control" type = "text" name = "comment[text]" value="<%= comment.text %>" style = "width:30%; margin: 0 auto;">
        </div>
        <div class= "form-group">
            <button class="btn btn-primary btn-block" style= "margin:0 auto; width: 30%">Submit</button>
        </div>
        <a href= "/places/<%= place_id %>" style= "margin:0 auto">Go Back</a>
    </form>
</div>
<% include ../partials/footer %>
